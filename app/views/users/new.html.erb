<% if flash[:message] %>
	<%= flash[:message] %><br>
<% end %>

<%= form_for @user do |f| %>

<%= f.label :username %>
<%= f.text_field :username %>

<%= f.label :password %>
<%= f.password_field :password %>

<%= f.label :password_confirmation, "Please confirm your password" %>
<%= f.password_field :password_confirmation %><br><br>

<%= f.label :first_name %><br>
<%= f.text_field :first_name %><br>

<%= f.label :last_name %><br>
<%= f.text_field :last_name %><br>

<%= f.label :happiness, "How happy are you? (1-10 scale)" %><br>
<%= f.number_field :happiness %><br>

<%= f.label	:health, "How healthy are you? (1-10 scale)" %><br>
<%= f.number_field :health %><br>

<%= f.label :admin, "Are you an administrator?" %>
<%= f.check_box :admin, {}, true, false %><br>

<%= f.submit %>

<% end %>